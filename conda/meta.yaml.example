{% set name = "plugify-plugin-configs" %}
{% set version = "REPLACE_VERSION" %}

package:
  name: {{ name|lower }}
  version: {{ version }}

source:
  path: .

build:
  number: 0
  string: "{{ target_platform | replace('-', '_') }}"
  missing_dso_whitelist:
    - "*/ld-linux*.so.*"  # [linux]
    - "*/libc.so.*"       # [linux]
    - "*/libm.so.*"       # [linux]
    - "*/libdl.so.*"      # [linux]
    - "*/libpthread.so.*" # [linux]
    - "*/librt.so.*"      # [linux]

requirements:
  run:
    - __glibc >=2.17 # [linux64]

test:
  commands:
    - test -f $PREFIX/bin/libplugify-plugin-configs.so  # [linux]
    - test -f $PREFIX/plugify-plugin-configs.pplugin    # [linux]
    - if not exist %PREFIX%\\bin\\plugify-plugin-configs.dll exit 1  # [win]
    - if not exist %PREFIX%\\plugify-plugin-configs.pplugin exit 1   # [win]

about:
  home: https://github.com/{{ environ.get('GITHUB_REPOSITORY', 'your-org/your-repo') }}
  license: MIT
  license_family: MIT
  license_file: LICENSE
  summary: Configs Plugin for Plugify
  description: |
    A plugin that provides a system to read and write configuration files.
  doc_url: https://github.com/{{ environ.get('GITHUB_REPOSITORY', 'your-org/your-repo') }}/blob/main/README.md
  dev_url: https://github.com/{{ environ.get('GITHUB_REPOSITORY', 'your-org/your-repo') }}

extra:
  recipe-maintainers:
    - {{ environ.get('GITHUB_ACTOR', 'your-username') }}
